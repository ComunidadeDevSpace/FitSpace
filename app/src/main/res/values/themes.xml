<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FitSpace" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_background</item>
        <item name="colorPrimaryVariant">@color/blue_03</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_02</item>
        <item name="colorSecondaryVariant">@color/blue_01</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/orange</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_42</item>
    </style>

    <style name="LinkTextColor" parent="Widget.AppCompat.TextView">
        <item name="android:textColorLink">@color/black</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:text">FitSpace</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/blue_02</item>
    </style>

    <style name="ToolBarText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BoasVindas" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black_42</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Description" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_42</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_42</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Erro" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:background">@drawable/btn_rounded_corner</item>
    </style>

    <style name="TimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#E46A15</item>
    </style>

    <style name="CardViewMain" parent="CardView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="goals_check" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black_42</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="imc_text" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="imc_info" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>