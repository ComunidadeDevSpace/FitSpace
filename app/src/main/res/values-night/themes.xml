<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FitSpaceDark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_42</item>
        <item name="colorOnPrimary">@color/black_coffe</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_gold</item>
        <item name="colorSecondaryVariant">@color/chrysler_gold</item>
        <item name="colorOnSecondary">@color/gold</item>

        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/safety_yellow</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_42</item>

        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LinkTextColor" parent="Widget.AppCompat.TextView">
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:text">FitSpace</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/black_42</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TookBarText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BoasVindas" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Description" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Erro" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/yellow_gold</item>
        <item name="android:background">@drawable/btn_rounded_corner_darkmode</item>
    </style>

    <style name="TimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#ECA20C</item>
    </style>

    <style name="CardViewMain" parent="Widget.MaterialComponents.CardView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>